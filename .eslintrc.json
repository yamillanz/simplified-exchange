{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "prettier/prettier": "error",
    "no-var": "error",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-const-assign": "error",
    "prefer-destructuring": "warn",
    "prefer-spread": "warn",
    "import/no-unresolved": "error"
  }
}
